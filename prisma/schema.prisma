
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  events    Event[]
}

model Event {
  id        Int      @id @default(autoincrement())
  eventName String
  eventDate DateTime
  location  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
